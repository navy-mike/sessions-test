<head>
  <title id="notifyuser-title">{{title}}</title>
  <link rel="stylesheet" href="/css/styles.css">

</head>

<body>
  <div class="main-content">
    {{>header}}
    <br>
    <div id="notifyuser-name">{{name}}</div>
    <div id="notifyuser-error">{{error}}</div>
    <div id="notifyuser-message">
      <p>{{usermessage}}</p>
